int Solution::diffPossible(const vector<int> &A, int B) {
    vector<int> c=A;
    int n=A.size();
    sort(c.begin(),c.end());
    int i=0,j=1;
    while(i<n && j<n){
        if(i==j){
            j++;}
            
        int count=A[j]-A[i];
        if(count==B){
            return 1;
        }else if(count>B){
            i++;            
        }
        else{
            j++;
        }
    }
    return 0;
}
