class Solution {
public:
    bool validPalindrome(string s) {
        int i=0,j=s.length()-1;
        while(i<j){
            if(s[i]==s[j]){
               i++;
               j--;
            }else{
                return validpalin(i+1,j,s)||validpalin(i,j-1,s);
            }
        }
        return true;
    }
    bool validpalin(int i,int j,string s){
            while(i<j){
            if(s[i]==s[j]){
               i++;
               j--;
            }else{
                return false;
            }
        }
        return true;
    }
};
